@model ProductManager.Application.Models.DBEntities.Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.ProductName
            @if (Model.ProductID != 0)
            {
                <span class="badge rounded-pill bg-primary text-white" style="float:right">
                    <small>@Model.ProductPrice ₽</small>
                </span>
                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="@("#updateProduct_" + Model.ProductID)" asp-controller="Product" asp-action="UpdateProduct">
                    Редактировать @Model.ProductName
                </button>
                <partial name="../Shared/Product/_ProductUpdatePartialView" , model="new ProductViewModel(Model, ViewBag.Categories)" />
                <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="@("#productDetails_" + Model.ProductID)" asp-controller="Product" asp-action="ProductDetails">
                    Подробнее о @Model.ProductName
                </button>
                <partial name="../Shared/Product/_ProductDetailsPartialView" , model="new ProductViewModel(Model, ViewBag.Categories)" />
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="@("#deleteProduct_" + Model.ProductID)" asp-controller="Product" asp-action="DeleteProduct">
                    Удалить @Model.ProductName
                </button>
                <partial name="../Shared/Product/_ProductDeletePartialView", model="Model" />
            }
        </h4>
    </div>
    <div class="card-text p-1">@Model.ProductDescription</div>
</div>
