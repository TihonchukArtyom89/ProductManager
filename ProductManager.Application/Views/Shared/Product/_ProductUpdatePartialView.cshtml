@using ProductManager.Application.Models.DBEntities
@model ProductManager.Application.ViewModels.ProductPageViewModel

<div class="modal fade" id="updateProduct_@Model.Product.ProductID" aria-labelledby="updateProductLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateProductLabel">Редактирование @Model.Product.ProductName</h5>
            </div>
            <div class="modal-body">
                <form asp-controller="Product" asp-action="UpdateProduct" method="post" asp-route-category="@ViewBag.CurrentCategory" asp-route-searchString="@ViewBag.SearchString" asp-route-sortOrder="@ViewBag.SortOrder" asp-route-productPage="@ViewBag.SelectedPage" asp-route-pageSize="@ViewBag.SelectedPageSize">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Product.ProductID" />
                        <label asp-for="@Model.Product.ProductName" class="control-label"></label>
                        <input asp-for="@Model.Product.ProductName" class="form-control" />
                        <span asp-validation-for="@Model.Product.ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ProductCategoryString" class="control-label">Категория продукта</label>
                        <select asp-for="@Model.ProductCategoryString" class="form-control" name="ProductCategoryString">
                            <option value="1">Выберите категорию продукта</option>
                            @foreach (SelectListItem categoryListItem in ViewBag.Categories)
                            {
                                if(Model.Product.CategoryID.ToString() == categoryListItem.Value)
                                {

                                    <option value="@categoryListItem.Value" selected>@categoryListItem.Text</option>
                                }
                                else
                                {
                                    <option value="@categoryListItem.Value">@categoryListItem.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="@Model.Product.CategoryID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Product.ProductDescription" class="control-label"></label>
                        <input asp-for="@Model.Product.ProductDescription" class="form-control" />
                        <span asp-validation-for="@Model.Product.ProductDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.ProductPriceString" class="control-label"></label>
                        <input asp-for="@Model.ProductPriceString" class="form-control"/>
                        <span asp-validation-for="@Model.ProductPriceString" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                        <button type="submit" class="btn btn-primary">Изменить</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>