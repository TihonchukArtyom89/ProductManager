@using ProductManager.Application.Models.DBEntities
@model ProductManager.Application.ViewModels.PricelistPageViewModel

<div class="modal fade" id="createPricelist" aria-labelledby="createPricelistLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createPricelistLabel">Добавление нового прайслиста</h5>
            </div>
            <div class="modal-body">
                <form asp-controller="Pricelist" asp-action="CreatePricelist" method="post" asp-route-searchString="@ViewBag.SearchString" asp-route-sortOrder="@ViewBag.SortOrder" asp-route-pricelistPage="@ViewBag.SelectedPage" asp-route-pageSize="@ViewBag.SelectedPageSize">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>                   
                    <div class="form-group">
                        <label asp-for="@(Model.Pricelist!).PricelistName" class="control-label"></label>
                        <input asp-for="@(Model.Pricelist!).PricelistName" class="form-control" />
                        <span asp-validation-for="@(Model.Pricelist!).PricelistName" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                        <button type="submit" class="btn btn-primary" id="">Добавить</button>
                    </div>
                </form> 
            </div>
        </div>
    </div>
</div>